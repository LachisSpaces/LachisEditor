<?xml version="1.0" encoding="utf-8" ?>
<LachisEditor>
   <MainWindow Text="Lachi's Editor">
      <ApplicationMenu>
         <DBImport Text="Extrair cdb"/>
         <DBExport Text="Exportar para cdb"/>
         <DBOpen Text="Abrir Base de Dados"/>
         <DBSave Text="Guardar Base de Dados"/>
         <DBClose Text="Close database"/>
         <LanguageSelection Text="Idiomas" ToolTip="Alterar o idioma da aplicação"/>
         <Options Text="Opções" ToolTip="Opções gerais">
            <UseTranslatedFields Text="Utilizar tradução de coluna"/>
            <UseForeignKeyLookup Text="Utilizar pesquisa de tabela"/>
            <UseTeamFilter Text="Utilizar filtro de equipa"/>
         </Options>
         <Exit Text="Sair"/>
      </ApplicationMenu>
      <TabStart Text="Iniciar">
         <Databases Text="Bases de Dados">
            <SelectDatebase Text="Selecionar uma Base de Dados"/>
            <DeleteDatebase Text="Eliminar uma Base de Dados"/>
         </Databases>
         <Tables Text="Tabelas">
            <SelectTable Text="Selecionar tabela"/>
            <DYN_manager Text="Manager"/>
            <DYN_sponsor Text="Sponsor"/>
            <DYN_objectif Text="Objetivos"/>
            <DYN_team Text="Equipas"/>
            <DYN_cyclist Text="Ciclistas"/>
            <STA_race Text="Corridas"/>
            <STA_stage Text="Etapas"/>
         </Tables>
         <Filter Text="Filter">
            <Apply Text="Aplicar"/>
            <Clear Text="Varrer"/>
         </Filter>
         <MassEdit Text="Variação da massa">
            <Apply Text="Aplicar"/>
            <Clear Text="Varrer"/>
         </MassEdit>
         <Layout Text="Layout">
            <DefineLayout Text="Definir o layout da tabela"/>
            <ResetPosition Text="Redefinir posições de colunas"/>
            <ResetSorting Text="Redefinir ordenação/agrupamento"/>
            <ResetSize Text="Redefinir tamanho de colunas"/>
         </Layout>
         <LayoutSubsets Text="Layout subsets">
            <Layout0 Text="No layout"/>
            <Layout1 Text="Layout 1"/>
            <Layout2 Text="Layout 2"/>
         </LayoutSubsets>
      </TabStart>
      <Messages>
         <NoDataLoaded Text="É necessário abrir uma base de dados ou extrair uma."/>
         <DatabaseLoadedAlready Text="Já abriu uma base de dados"/>
         <NoRecentDatabase Text="Por favor, extraia uma base de dados."/>
         <LoadingWaiting Text="Por favor, aguarde até que os dados tenham sido carregados."/>
         <SecurityCheckUnsavedData Text="Deseja guardar antes da base de dados ser fechada?"/>
         <FileNameInvalid Text="Nome de ficheiro inválido. Por favor, remova todos os espaços do nome."/>
         <MassEditWarning Text="Note-se, esta mudança não pode ser revertida.\r\nVocê pode salvar antes, se necessário.\r\n\r\nUse o filtro se você não quiser alterar todas as linhas."/>
      </Messages>
   </MainWindow>
   <LayoutDefinition Text="Definição de layout">
      <Buttons>
         <MoveUp Text="Mover para cima"/>
         <MoveUp5 Text="Mover 5 para cima"/>
         <MoveUp10 Text="Mover 10 para cima"/>
         <MoveDown Text="Mover para baixo"/>
         <MoveDown5 Text="Mover 5 para baixo"/>
         <MoveDown10 Text="Mover 10 para baixo"/>
         <MoveFirst Text="Mover para o início"/>
         <MoveLast Text="Mover para o final"/>
         <Cancel Text="Cancelar"/>
         <Apply Text="Aplicar"/>
      </Buttons>
      <Columns>
         <FieldName Text="Nome da coluna"/>
         <Width Text="Largura"/>
         <Column Text="Coluna"/>
         <LayoutGroups Text="Subsets"/>
      </Columns>
   </LayoutDefinition>
   <DBLoader>
      <LoadDatabaseNoData Text="Não é possível abrir a base de dados, por favor, extrair novamente."/>
      <DeleteFitnessProgram Text="Alguns programas de fitness já existem.\r\nDeseja eliminá-los antes dos novos programas sejam criados?\r\nWarning: Programas podem ser sobrescritos durante a criação do plano."/>
      <ExtractDB_NumberInvalid Text="Existe um erro na tabela  {0}  na linha  {1} = {2}.\r\nO valor na coluna  {3}  foi redefinido para 0.\r\nO valor corrompido foi {4}\r\n\r\nÉ preciso verificar e corrigir os dados desta linha."/>
   </DBLoader>

   <DYN_cyclist>
      <gene_sz_lastname Text="Apelido"/>
      <gene_sz_firstname Text="Nome"/>
      <value_f_current_evaluation Text="MED"/>
   </DYN_cyclist>
   <STA_race>
      <gene_sz_race_name Text="Corrida"/>
   </STA_race>
   <STA_stage>
      <gene_sz_stage_name Text="Nome da etapa"/>
   </STA_stage>
</LachisEditor>
